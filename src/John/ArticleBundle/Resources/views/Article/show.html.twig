{% extends 'JohnAdminBundle::admin_layout.html.twig' %}

{% block admin_main %}

    <div class="article-show-panel">
        {{ form(delete_form) }}
        {{ form(publish_form) }}
        <a class="edit-article" href="{{ path('article_edit',{'id':entity.id}) }}">Edit this article</a>
    </div>
<h1>{{ entity.title }}</h1>
{{ entity.content|raw }}
<h2>Article tags</h2>
    <ol>
        {% for tag in entity.tags %}
            <li>{{ tag.name }}</li>
        {% endfor %}
    </ol>


{% endblock %}

