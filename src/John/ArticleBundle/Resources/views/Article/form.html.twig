{% form_theme form _self %}
{% block form_errors %}
    {% spaceless %}
        {% if errors is defined and errors|length > 0 %}
            <ul class="article_error">
                {% for error in errors %}
                    <li>{{ error.message }}</li>
                {% endfor %}
            </ul>
        {% endif %}
    {% endspaceless %}
{% endblock form_errors %}


{{ form_start(form,{'attr': {'novalidate': 'novalidate'}}) }}
{{ form_errors(form) }}

     <div>
        {{ form_label(form.categories) }}
        {{ form_widget(form.categories) }}
        {{ form_errors(form.categories) }}
     </div>

    <div>
        {{ form_label(form.title) }}
        {{ form_widget(form.title) }}
        {{ form_errors(form.title) }}
    </div>

   <div>
       {{ form_label(form.abstract) }}
       {{ form_widget(form.abstract) }}
       {{ form_errors(form.abstract) }}
   </div>

    <div>
        {{ form_label(form.content) }}
        {{ form_widget(form.content) }}
        {{ form_errors(form.content) }}
    </div>

    <div>
        {{ form_label(form.url) }}
        {{ form_widget(form.url) }}
        {{ form_errors(form.url) }}
    </div>

    <div>
        {{ form_label(form.featured_image.file) }}
        {{ form_widget(form.featured_image.file) }}
        {{ form_errors(form.featured_image.file) }}
    </div>

    <div>
        {{ form_label(form.featured_image.alt,'Image Description' ) }}
        {{ form_widget(form.featured_image.alt, { 'attr':{'disabled':'disabled'} } ) }}
        {{ form_errors(form.featured_image.alt) }}
    </div>


    {{ form_row(form.existing_tags) }}

    <ul class="tags" data-prototype="{{ form_widget(form.tags.vars.prototype)|e}}">
        {% for tag in form.tags %}
            <li>
                <div>
                    {{ form_label(tag.name) }}

                    {{ form_widget(tag.name,{ 'attr':{'readonly':'readonly'} }) }}

                    {{ form_errors(tag.name) }}

                </div>
            </li>
        {% endfor %}
    </ul>


    {% if  form.preview is defined %}
        <div class="form_buttons">
            {{ form_widget(form.publish ) }}
            {{ form_widget(form.preview) }}
            {{ form_widget(form.draft ) }}
        </div>
    {% else %}
        <div class="form_button">
            {{ form_widget(form.draft ) }}
        </div>
    {% endif %}






{{ form_end(form) }}